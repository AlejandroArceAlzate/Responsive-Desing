@import "nib"

verde_A = #97C335
gris_A = #141F23
gris_B = #0E0F0F
.Canvas
	overflow hidden
	position relative
	&-main
		padding 10px 0
//	&-menu
//		transition 1s
//		left -200px
//		position absolute
//		top 0
//		width 200px
//		&.is-active
//			left 0
	&-sidebar
		-webkit-transition .3s
		position absolute
		right -200px
		top 0
		width 200px
		&.is-active
			right 0
.Header
	background gris_A
	height 30px
	padding 10px
	color white
	line-height 10px
	position relative
	&-logo
		text-transform uppercase
		font-weight normal
		text-decoration underline
		text-shadow 0 0 10px verde_A
		font-size 18px
	&-button
		background orange
		border none
		border-radius 10 px
		color white
		padding 10 px
		position absolute
		right 20px
		top 10px
		display none
		&.is-active
			display block

.MainMenu
	background gris_A
	padding 0
	transition .3s
	left -200px
	position absolute
	top 0
	margin 0
	width 200px
	&.is-active
		left 0
	&-item
		text-align center
		height 50px
		line-height 50px
		list-style none
		transition .3s
		&:hover
			background gris_B
	&-link
		color white
		text-decoration none
		text-transform uppercase
		font-size 14px
		display block
		
@media screen and (min-width : 767px)
	.Header
		&-button
			display none
	.MainMenu
		left auto
		right 0
		width auto
		&-item
			display inline-block
		&-link
			padding 0 20px
	
	